{
  "compilerOptions": {
    // ============================================================================
    // CONFIGURACIÓN BÁSICA
    // ============================================================================
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ============================================================================
    // CONFIGURACIÓN DE PATHS
    // ============================================================================
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/lib/utils.ts"]
    },

    // ============================================================================
    // CONFIGURACIÓN ESTRICTA (EQUILIBRADA)
    // ============================================================================
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // Deshabilitado temporalmente
    "noUnusedParameters": false, // Deshabilitado temporalmente
    "exactOptionalPropertyTypes": false, // Deshabilitado temporalmente
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false, // Deshabilitado temporalmente
    "noUncheckedIndexedAccess": false, // Deshabilitado temporalmente
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // ============================================================================
    // CONFIGURACIÓN DE TIPOS
    // ============================================================================
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,

    // ============================================================================
    // CONFIGURACIÓN DE MÓDULOS
    // ============================================================================
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false, // Deshabilitado temporalmente

    // ============================================================================
    // CONFIGURACIÓN DE EXPERIMENTALES
    // ============================================================================
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,

    // ============================================================================
    // CONFIGURACIÓN DE COMPLETADO
    // ============================================================================
    "noFallthroughCasesInSwitch": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "suppressImplicitAnyIndexErrors": false,
    "suppressExcessPropertyErrors": false,

    // ============================================================================
    // CONFIGURACIÓN DE PERFORMANCE
    // ============================================================================
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableSourceOfProjectReferenceRedirect": false,
    "disableSizeLimit": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "traceResolution": false,

    // ============================================================================
    // CONFIGURACIÓN DE INTEROP
    // ============================================================================
    "allowImportingTsExtensions": false,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "preserveSymlinks": false,
    "preserveWatchOutput": false,

    // ============================================================================
    // CONFIGURACIÓN DE COMPILACIÓN
    // ============================================================================
    "composite": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.tsbuildinfo"
  },

  // ============================================================================
  // INCLUSIÓN Y EXCLUSIÓN DE ARCHIVOS
  // ============================================================================
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    "*.config.js",
    "*.config.mjs",
    "*.config.ts"
  ]
}
