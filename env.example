# ============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN - CLERK
# ============================================================================
# Claves de API de Clerk para autenticación y gestión de usuarios
# Obtén estas claves desde: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_placeholder
CLERK_SECRET_KEY=sk_test_placeholder

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS - SUPABASE
# ============================================================================
# Configuración de Supabase para almacenamiento de datos
# Obtén estas claves desde: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://placeholder.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=placeholder-key
SUPABASE_SERVICE_ROLE_KEY=placeholder-service-key

# ============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================================
# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Entorno de ejecución
NODE_ENV=development

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
# Clave secreta para encriptación de sesiones y tokens
# Genera una clave segura: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=your_encryption_key_here

# Configuración de CORS
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# CONFIGURACIÓN DE EMAIL
# ============================================================================
# Proveedor de email (sendgrid, mailgun, ses)
EMAIL_PROVIDER=sendgrid

# Configuración de SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=CommunityOS

# Configuración de Mailgun
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# Configuración de AWS SES
AWS_SES_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_SES_REGION=us-east-1

# ============================================================================
# CONFIGURACIÓN DE PAGOS
# ============================================================================
# Proveedor de pagos (stripe, paypal)
PAYMENT_PROVIDER=stripe

# Configuración de Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Configuración de PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# ============================================================================
# CONFIGURACIÓN DE ANALYTICS
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ============================================================================
# CONFIGURACIÓN DE MONITOREO
# ============================================================================
# Sentry para monitoreo de errores
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# LogRocket para grabación de sesiones
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id_here

# ============================================================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ============================================================================
# AWS S3 para almacenamiento de archivos
AWS_S3_ACCESS_KEY_ID=your_aws_access_key_here
AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_s3_bucket_name_here

# Cloudinary para imágenes
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ============================================================================
# CONFIGURACIÓN DE CACHE
# ============================================================================
# Redis para cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# CONFIGURACIÓN DE BÚSQUEDA
# ============================================================================
# Algolia para búsqueda
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id_here
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key_here
ALGOLIA_ADMIN_KEY=your_algolia_admin_key_here

# ============================================================================
# CONFIGURACIÓN DE INTEGRACIONES
# ============================================================================
# Slack para notificaciones
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Discord para notificaciones
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# ============================================================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================================================
# Habilitar modo debug
DEBUG=false

# Configuración de logs
LOG_LEVEL=info
LOG_DESTINATION=console

# Configuración de rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================================================
# Configuración de CDN
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# Configuración de optimización
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30

# ============================================================================
# CONFIGURACIÓN DE LEGAL
# ============================================================================
# URLs de políticas legales
NEXT_PUBLIC_TERMS_URL=https://yourdomain.com/terms
NEXT_PUBLIC_PRIVACY_URL=https://yourdomain.com/privacy
NEXT_PUBLIC_COOKIE_URL=https://yourdomain.com/cookies

# Configuración de GDPR
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# ============================================================================
# CONFIGURACIÓN DE SOPORTE
# ============================================================================
# Información de contacto
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+1-555-123-4567

# Configuración de tickets
TICKET_SYSTEM_ENABLED=true
TICKET_SYSTEM_PROVIDER=zendesk

# ============================================================================
# CONFIGURACIÓN DE TESTING
# ============================================================================
# Configuración para tests
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_CLERK_SECRET_KEY=sk_test_test_key_here

# Configuración de Playwright
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_HEADLESS=true

# ============================================================================
# CONFIGURACIÓN DE DESPLIEGUE
# ============================================================================
# Vercel
VERCEL_URL=https://your-app.vercel.app
VERCEL_GIT_COMMIT_SHA=your_git_commit_sha_here

# Configuración de build
NEXT_PUBLIC_BUILD_ID=your_build_id_here
NEXT_PUBLIC_BUILD_TIME=your_build_time_here 